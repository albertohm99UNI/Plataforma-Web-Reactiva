{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "elrincondeeeva": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "architect": {
      "build": {
        "options": {
          "scripts": [
            "src/assets/js/login.js", "src/app/assets/js/TweenMax.min.js"
          ]
        }
      }
    }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist/elrincondeeeva",
            "index": "src/index.html",
            
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/app/assets"],

            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "./node_modules/leaflet/dist/leaflet.css",
              "src/styles.scss"
             
            ],
            "scripts": [],
            "customWebpackConfig": {
              "path": "./webpack.config.js"
            },
            "main": "src/main.ts"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environments.ts",
                  "with": "src/environments/environments.prod.ts"
                }
              ],
              "optimization": true,
              "aot": true,
            
              "sourceMap": false,
         
           
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "50000kB",
                  "maximumError": "900MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "800kB",
                  "maximumError": "900MB"
                }
              ],
              "outputHashing": "all"
              
            },
            "despliegue": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environments.ts",
                  "with": "src/environments/environments.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "elrincondeeeva:build:production"
            },
            "development": {
              "buildTarget": "elrincondeeeva:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/app/assets"],

            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "./node_modules/leaflet/dist/leaflet.css",
              "src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    }
  }
}
